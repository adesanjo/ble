include "string"

fn fromCSV(s){
    l = string.split(s, "\n");
    for i = 0 to +l{
        l(i) = string.split(l(i), ",")
    }
    l
}

fn toCSV(l){
    for i = 0 to +l{
        l(i) = string.join(l(i), ",")
    }
    s = string.join(l, "\n")
    s
}

fn fromCSVfile(f){
    s = read f
    l = string.split(s, "\n")
    for i = 0 to +l{
        l(i) = string.split(l(i), ",")
    }
    l
}

fn toCSVfile(f, l){
    for i = 0 to +l{
        l(i) = string.join(l(i), ",")
    }
    s = string.join(l, "\n")
    write f, s
}

