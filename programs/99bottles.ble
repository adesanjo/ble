bot = 99;
bots = " bottles ";
while (str bot) != "no more" do{
    disp (str bot) + bots + "of beer on the wall, " + (str bot) + bots + "of beer.";
    bot = bot - 1;
    if bot == 0 then bot = "no more";
    bots = if bot == 1 then " bottle " else " bottles ";
    disp "Take one down and pass it around, " + (str bot) + bots + "of beer on the wall.\n";
};
disp "No more bottles of beer on the wall, no more bottles of beer.\nGo to the store and buy some more, 99 bottles of beer on the wall.";